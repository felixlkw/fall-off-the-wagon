{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": [
    "./contracts/**/*",
    "./scripts/**/*",
    "./test/**/*",
    "./typechain-types/**/*",
    "hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "cache",
    "artifacts"
  ]
}